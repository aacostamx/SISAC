@model VOI.SISAC.Web.Models.VO.Airport.ServiceVO
@{
    ViewBag.Title = @VOI.SISAC.Web.Resources.Resource.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @Html.Partial("_AlertView")

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.ServiceTitle</p>
                <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Edit</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ServiceCode, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ServiceCode, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.ServiceCode, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ServiceName, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "inputForm form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 150);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 150)" } })
                    @Html.ValidationMessageFor(model => model.ServiceName, "", new { @class = "text-danger" })
                </div>
                <div>
                    @Html.HiddenFor(model => model.Status)
                </div>
            </div>
            <div class="row">
                @Html.Label("Info", @VOI.SISAC.Web.Resources.Resource.ServiceInfo, new { @class = "subtitle_h5 control-label" })
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <br />
                    <input onclick="location.href='@Url.Action("Index","Service")'" type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back">
                    <input type="submit" value="@VOI.SISAC.Web.Resources.Resource.Save" class="btnVolaris">
                    <br />
                </div>
            </div>
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger">
                    <p>@ViewBag.Mensaje </p>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}

