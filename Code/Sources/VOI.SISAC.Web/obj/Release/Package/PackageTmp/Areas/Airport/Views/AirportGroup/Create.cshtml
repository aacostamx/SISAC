@model VOI.SISAC.Web.Models.VO.Airport.AirportGroupVO

@{
    ViewBag.Title = Resource.AirportGroupTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @Html.Partial("_AlertView")

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <p class="subtitle_h3_black">@Resource.AirportGroupTitle</p>
        <p class="subtitle_h3_ancillarie">@Resource.Add</p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.AirportGroupCode, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.AirportGroupCode, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 8, 1);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 8, 1)" } })
                    @Html.ValidationMessageFor(model => model.AirportGroupCode, "", new { @class = "text-danger" })
                </div>

                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.AirportGroupName, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.AirportGroupName, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 40);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 40)" } })
                    @Html.ValidationMessageFor(model => model.AirportGroupName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <br />
                    <button type="button" class="btn btn-default" name="back-btn" title="@Resource.Back" onclick="location.href='@Url.Action("Index", "AirportGroup")'">
                        <i class="fa fa-arrow-left fa-fw"></i>&nbsp;@Resource.Back
                    </button>
                    <button type="submit" class="btn btn-default btn-green" name="back-btn" title="@Resource.Save">
                        <i class="fa fa-floppy-o fa-fw"></i>&nbsp;@Resource.Save
                    </button>
                    <br />
                </div>
            </div>
        </div>
    }
</div>
@Scripts.Render("~/bundles/CommonFunctions")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}