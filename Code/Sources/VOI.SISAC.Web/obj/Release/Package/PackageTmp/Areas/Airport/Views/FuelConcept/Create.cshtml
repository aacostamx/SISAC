@model VOI.SISAC.Web.Models.VO.Airport.FuelConceptVO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    @Html.Partial("_AlertView")
    <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.FuelConceptTitle</p><p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Create</p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.FuelConceptName, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.FuelConceptName, new { htmlAttributes = new { @class = "inputForm form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 60);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 60)"} })
                    @Html.ValidationMessageFor(model => model.FuelConceptName, "", new { @class = "text-danger" })
                </div>          
            </div>
        </div> 
        <br />

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <br />
                <input type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back" onclick="@("location.href='" + @Url.Action("Index", "FuelConcept") + "'")" />
                <input type="submit" value="@VOI.SISAC.Web.Resources.Resource.Save" class="btnVolaris" /> 
            </div>
        </div>         
        if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger">
                    <p>@ViewBag.Mensaje </p>
                </div>
            }         
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}

