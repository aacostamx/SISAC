@model VOI.SISAC.Web.Models.VO.Catalog.CountryVO

@{
    ViewBag.Title = @VOI.SISAC.Web.Resources.Resource.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/bootstraptablecss")

<div class="container">
    @Html.Partial("_AlertView")
    @using (Html.BeginForm())
    { 
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
               <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.CountryTitle</p>
               <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Add</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-4 col-sm-12 col-xs-12">
                @Html.LabelFor(model => model.CountryCode, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                @Html.EditorFor(model => model.CountryCode, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 3, 1);", @onkeyup = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 3, 1)" } })
                @Html.ValidationMessageFor(model => model.CountryCode, "", new { @class = "text-danger" })
            </div>

            <div class="row">

                <div class="col-md-4 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.CountryName, htmlAttributes: new { @class = "subtitle_h5 control-label  required-field" })
                    @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "inputForm form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 50);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 50)"} })
                    @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.CountryCodeShort, htmlAttributes: new { @class = "subtitle_h5 control-label  required-field" })
                    @Html.EditorFor(model => model.CountryCodeShort, new { htmlAttributes = new { @class = "form-control",@onkeypress = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 2, 1);", @onkeyup = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 2, 1)" } })
                    @Html.ValidationMessageFor(model => model.CountryCodeShort, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <br />
                        <input onclick="location.href='@Url.Action("Index","Country")'" type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back" title="@VOI.SISAC.Web.Resources.Resource.Back">
                        <input type="submit" value="@VOI.SISAC.Web.Resources.Resource.Save" title="@VOI.SISAC.Web.Resources.Resource.Save" class="btnVolaris">
                    <br />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}
