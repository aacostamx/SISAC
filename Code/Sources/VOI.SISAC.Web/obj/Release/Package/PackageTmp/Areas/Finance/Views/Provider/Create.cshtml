@model VOI.SISAC.Web.Models.VO.Finance.ProviderVO
@{
    ViewBag.Title = @VOI.SISAC.Web.Resources.Resource.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @Html.Partial("_AlertView")
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.ProviderTitle</p>
                <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Add</p>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ProviderNumber, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ProviderNumber, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 10);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 10)" } })
                    @Html.ValidationMessageFor(model => model.ProviderNumber, "", new { @class = "text-danger" })
                </div>

                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ProviderName, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ProviderName, new { htmlAttributes = new { @class = "inputForm form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 150);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 150)" } })
                    @Html.ValidationMessageFor(model => model.ProviderName, "", new { @class = "text-danger" })
                </div>

                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ProviderShortName, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ProviderShortName, new { htmlAttributes = new { @class = "inputForm form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 15);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 15)" } })
                    @Html.ValidationMessageFor(model => model.ProviderShortName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <br />
                    <input onclick="location.href='@Url.Action("Index","Provider")'" type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back" />
                    <input type="submit" value="@VOI.SISAC.Web.Resources.Resource.Save" class="btnVolaris" />
                    <br />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}