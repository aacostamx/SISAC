@model VOI.SISAC.Web.Models.VO.Airport.AirportGroupVO

@{
    ViewBag.Title = @Resource.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @Html.Partial("_AlertView")
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <p class="subtitle_h3_black">@Resource.AirportGroupTitle</p>
            <p class="subtitle_h3_ancillarie">@Resource.Edit</p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.AirportGroupCode, new { @class = "control-label subtitle_h5 required-field" })
                    @Html.EditorFor(model => model.AirportGroupCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.AirportGroupCode)
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.AirportGroupName, new { @class = "control-label subtitle_h5 required-field" })
                    @Html.EditorFor(model => model.AirportGroupName, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 40);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 40)" } })
                    @Html.ValidationMessageFor(model => model.AirportGroupName, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <br />
                <input onclick="location.href='@Url.Action("Index","AirportGroup")'" type="reset" class="btnVolaris" value=@Resource.Back />
                <input type="submit" value='@Resource.Save' class="btnVolaris" />
                <br />
            </div>
        </div>

    }
</div>
@Scripts.Render("~/bundles/CommonFunctions")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
