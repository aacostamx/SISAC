@model VOI.SISAC.Web.Models.VO.Security.ModuleVO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cultureForm = VOI.SISAC.Web.Helpers.CultureHelper.GetCurrentCulture();
}

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <p class="subtitle_h3_black">@Resource.ModuleTitle</p>
    <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Delete</p>
</div>

@Styles.Render("~/Content/bootstraptablecss")
@Styles.Render("~/bundles/SweetAlertCSS")

<div class="container">
    @Html.Partial("_AlertView")
    
    <h3>@VOI.SISAC.Web.Resources.Resource.ConfirmDelete</h3>

    @using (Html.BeginForm("Delete", "Module", new { area = "Security", id = Model.ModuleCode }, FormMethod.Post, new { id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="dl-horizontal">
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.ModuleCode, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.ModuleCode, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.ModuleCode, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.ModuleName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.ModuleName, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.ModuleName, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.MenuCode, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.MenuCode, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.MenuCode, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4 col-sm-6 col-xs-12">
                    @Html.LabelFor(model => model.ControllerName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.ControllerName, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.ControllerName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <br />
            <input onclick="@("location.href='" + @Url.Action("Index", "Module") + "'")" type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back" title="@VOI.SISAC.Web.Resources.Resource.Back"/>
            <input onclick="ModuleController.ConfirmDelete()" type="reset" value="@VOI.SISAC.Web.Resources.Resource.Delete" title ="@VOI.SISAC.Web.Resources.Resource.Delete" class="btnVolaris"/>
        </div>
    </div>
    

</div>

@Scripts.Render("~/bundles/SweetAlertJS")
@Scripts.Render("~/bundles/ModuleJS")
<script type="text/javascript">
    var currentLang = '@cultureForm.ToString()';
</script>
