                                {
                                    @id = "delay-details",
                                    @name = "DelayRemarks",
                                    @class = "inputForm form-control",
                                    @cols = "92",
                                    @rows = "3",
                                    @tabindex = "16",
                                    @onkeypress = "return commonFunctions.validarComentarios(event, this)",
                                    @onkeyup = "return commonFunctions.validarComentarios(event, this)",
                                    @maxlength = "150"
                                })
                            </div>
                        </div>
