                                @onchange = "ManifestDepartureController.setLicense('crew-member-2')",
                                @tabindex = "2"
                            })
                            @Html.ValidationMessageFor(model => model.NickNameFirstOfficial, "", new { @class = "text-danger text-danger-error" })
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
