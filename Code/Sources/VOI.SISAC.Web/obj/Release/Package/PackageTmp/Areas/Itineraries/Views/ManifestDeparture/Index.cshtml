                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="table-content">
                                    @Html.Partial("Partial/_DelaysTable")
                                </div>
                            </div>
