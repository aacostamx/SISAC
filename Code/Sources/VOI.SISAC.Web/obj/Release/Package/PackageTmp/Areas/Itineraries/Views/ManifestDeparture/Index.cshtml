                            {
                                @id = "next-scale",
                                @class = "inputForm form-control combobox remove-ms-clear",
                                @tabindex = "10"
                            })
                            @Html.ValidationMessageFor(model => model.ScaleStationCode, "", new { @class = "text-danger text-danger-error" })
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <label class="subtitle_h5 control-label required-field">@Resource.ArrivalStation</label>
                            @Html.DropDownListFor(model => model.ArrivalStationCode, new List<SelectListItem>(), new
                            {
                                @id = "arrival-station",
                                @class = "inputForm form-control combobox remove-ms-clear",
                                @tabindex = "11"
                            })
                            @Html.ValidationMessageFor(model => model.ArrivalStationCode, "", new { @class = "text-danger text-danger-error" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 no-padding-left">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <label class="subtitle_h5 control-label">@Resource.ScheduledDepartureDate</label>
                                    <input type="text" id="scheduled-date" name="ScheduledDepartureDate" class="inputForm form-control" readonly="readonly" value="@Model.ScheduledDepartureDate" placeholder="YYYY/MM/DD" />
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <label class="subtitle_h5 control-label">@Resource.ScheduledDepartureTime</label>
                                    <input type="text" id="scheduled-time" name="ScheduledDepartureTime" class="inputForm form-control" readonly="readonly" value="@Model.ScheduledDepartureTime"/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <label class="subtitle_h5 control-label required-field">@Resource.ActualDepartureDate</label>
                                    @Html.EditorFor(model => model.ActualDepartureDate, new { htmlAttributes = new { @id = "real-date", @class = "inputForm form-control ClassDate", @tabindex = "12" } })
                                    @Html.ValidationMessageFor(model => model.ActualDepartureDate, "", new { @class = "text-danger text-danger-error" })
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                                    <label class="subtitle_h5 control-label required-field">@Resource.ActualDepartureTime</label>
                                    @Html.EditorFor(model => model.ActualDepartureTime, new
                                    {
                                        htmlAttributes = new
                                        {
                                            @id = "real-time",
                                            @class = "inputForm form-control",
                                            @tabindex = "13",
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.ActualDepartureTime, "", new { @class = "text-danger text-danger-error" })
                                </div>
                            </div>
                        </div>

                        @* Example, deleted the style tags when the implementation will be the correct one *@
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4" style="text-align: center">
                            <div class="row">
                                <i id="diff-icon" class="fa-times-delay-icon fa fa-times"></i>
                            </div>

                            <div class="row subtitle_h6_blue_block" style="text-align: center">
                                <strong>
                                    <span>@Resource.DifferenceMinutes</span>
                                    <span id="diff-minutes"></span>
                                </strong>
                            </div>
                        </div>
                    </div>
                    <div id="delay-section">
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <label class="subtitle_h5 control-label">@Resource.DelayReason</label>
                            </div>
                            <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
                                <select class="inputForm form-control combobox remove-ms-clear" id="select-delay" tabindex="14"></select>
                            </div>
                            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
