@model VOI.SISAC.Web.Models.VO.Process.NationalInvoiceControlCreateParameter
<div class="modal fade" id="CreatePolicy" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.CreatePolicy</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CreatePolicy", "NationalJetFuelInvoice", FormMethod.Post, new { name = "formCreatePolicy", id = "formCreatePolicy" }))
                {
                    @Html.HiddenFor(m => m.RemittanceIdentifier, new { htmlAttributes = new { @id = "RemittanceIdentifier"} })
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <label class="subtitle_h5 control-label required-field">@VOI.SISAC.Web.Resources.Resource.MonthYear</label>
                            @Html.EditorFor(m => m.MonthYear, new { htmlAttributes = new { @class = "form-control MonthYearMask", @readonly = "readonly" } })
                            @Html.ValidationMessage("MonthYear", new { @class = "text-danger text-danger-error" })
                        </div>

                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <label class="subtitle_h5 control-label required-field">@VOI.SISAC.Web.Resources.Resource.Period</label>
                            @Html.EditorFor(m => m.Period, new { htmlAttributes = new { @class = "form-control periodMask", @readonly = "readonly" } })
                            @Html.ValidationMessage("Period", new { @class = "text-danger text-danger-error" })
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <label class="subtitle_h5 control-label required-field">@VOI.SISAC.Web.Resources.Resource.BaseDate</label>
                            @Html.EditorFor(model => model.DateBaseline, new { htmlAttributes = new { @class = "form-control ClassDate", @placeholder = @VOI.SISAC.Web.Resources.Resource.FormatDate } })
                            @Html.ValidationMessage("DateBaseline", new { @class = "text-danger text-danger-error" })
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <label class="subtitle_h5 control-label required-field">@VOI.SISAC.Web.Resources.Resource.ValueDate</label>
                            @Html.EditorFor(model => model.DateValue, new { htmlAttributes = new { @class = "form-control ClassDate", @placeholder = @VOI.SISAC.Web.Resources.Resource.FormatDate } })
                            @Html.ValidationMessage("DateValue", new { @class = "text-danger text-danger-error" })
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                            <label class="subtitle_h5 control-label required-field">@VOI.SISAC.Web.Resources.Resource.PostingDate</label>
                            @Html.EditorFor(model => model.DatePosting, new { htmlAttributes = new { @class = "form-control ClassDate", @placeholder = @VOI.SISAC.Web.Resources.Resource.FormatDate } })
                            @Html.ValidationMessage("DatePosting", new { @class = "text-danger text-danger-error" })
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-times fa-fw"></i>
                    @VOI.SISAC.Web.Resources.Resource.Close
                </button>
                <button type="button" class="btn btn-default btn-green" onclick="NationalJetFuelInvoiceController.submitCreatePolicyForm()">
                    <i class="fa fa-plus fa-fw"></i>
                    @VOI.SISAC.Web.Resources.Resource.Create
                </button>
            </div>
        </div>
    </div>
</div>

