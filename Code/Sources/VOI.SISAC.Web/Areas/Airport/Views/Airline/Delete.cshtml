@model VOI.SISAC.Web.Models.VO.Airport.AirlineVO

@{
    ViewBag.Title = @VOI.SISAC.Web.Resources.Resource.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.AirlineTitle</p>
    <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Delete</p>
</div>

@Styles.Render("~/Content/bootstraptablecss")

<div class="container">
    @Html.Partial("_AlertView")
    <h3>@VOI.SISAC.Web.Resources.Resource.ConfirmDelete</h3>
    <div class="dl-horizontal">
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.AirlineCode, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.AirlineCode, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.AirlineName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.AirlineName, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.AirlineShortName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.AirlineShortName, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(model => model.CompanyCode, new { @class = "subtitle_h5 control-label required-field" })
                @Html.EditorFor(model => model.CompanyCode, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(model => model.Division, new { @class = "subtitle_h5 control-label required-field" })
                @Html.EditorFor(model => model.Division, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(model => model.BusinessName, new { @class = "subtitle_h5 control-label required-field" })
                @Html.EditorFor(model => model.BusinessName, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <br />
                <button type="button" class="btn btn-default" name="back-btn" title="@Resource.Back" onclick="location.href='@Url.Action("Index", "Airline")'">
                    <i class="fa fa-arrow-left fa-fw"></i>&nbsp;@Resource.Back
                </button>
                <button type="submit" class="btn btn-default btn-green" name="back-btn" title="@Resource.Delete">
                    <i class="fa fa-trash fa-fw"></i>&nbsp;@Resource.Delete
                </button>
            </div>
        </div>
    }

</div>
