@model VOI.SISAC.Web.Models.VO.Airport.AirlineVO

@{
    ViewBag.Title = @VOI.SISAC.Web.Resources.Resource.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @Html.Partial("_AlertView")

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="subtitle_h3">@VOI.SISAC.Web.Resources.Resource.AirlineTitle</p>
                <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.Add</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-4 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.AirlineCode, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.AirlineCode, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarAlfanumericoLlaves(event, this, 2, 1);", @onkeyup = "return commonFunctions.validarAlfanumericoLlaves(event, this, 2, 1)" } })
                    @Html.ValidationMessageFor(model => model.AirlineCode, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.AirlineName, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.AirlineName, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 40);", @onkeyup = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 40)" } })
                    @Html.ValidationMessageFor(model => model.AirlineName, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.AirlineShortName, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.AirlineShortName, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 3);", @onkeyup = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 3)" } })
                    @Html.ValidationMessageFor(model => model.AirlineShortName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.CompanyCode, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.CompanyCode, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 10);", @onkeyup = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 10)" } })
                    @Html.ValidationMessageFor(model => model.CompanyCode, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.Division, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.Division, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 10);", @onkeyup = "return commonFunctions.validarMaxLengthAlfabetico(event, this, 10)" } })
                    @Html.ValidationMessageFor(model => model.Division, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    @Html.LabelFor(model => model.BusinessName, new { @class = "subtitle_h5 control-label required-field" })
                    @Html.TextAreaFor(model => model.BusinessName, new
                    {
                        @class = "inputForm form-control",
                        @onkeypress = "return commonFunctions.validarComentarios(event, this)",
                        @onkeyup = "return commonFunctions.validarComentarios(event, this)",
                        @cols = 90,
                        @rows = 1,
                        @maxlength = "100"
                    })
                    @Html.ValidationMessageFor(model => model.BusinessName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <br />
                    <button type="button" class="btn btn-default" name="back-btn" title="@Resource.Back" onclick="location.href='@Url.Action("Index", "Airline")'">
                        <i class="fa fa-arrow-left fa-fw"></i>&nbsp;@Resource.Back
                    </button>
                    <button type="submit" class="btn btn-default btn-green" name="back-btn" title="@Resource.Save">
                        <i class="fa fa-floppy-o fa-fw"></i>&nbsp;@Resource.Save
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}
