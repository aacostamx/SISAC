@model VOI.SISAC.Web.Models.VO.Airport.GpuObservationVO

    @{
        ViewBag.Title = "Edit";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="container">

        @Html.Partial("_AlertView")

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2 class="subtitle_h3_black">Editar Observación GPU</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                        @Html.LabelFor(model => model.GpuObservationCode, htmlAttributes: new { @class = "control-label subtitle_h5 required-field" })
                        @Html.EditorFor(model => model.GpuObservationCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.GpuObservationCode, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                        @Html.LabelFor(model => model.GpuObservationCodeName, htmlAttributes: new { @class = "control-label subtitle_h5 required-field" })
                        @Html.EditorFor(model => model.GpuObservationCodeName, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 200);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 200)" } })
                        @Html.ValidationMessageFor(model => model.GpuObservationCodeName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                        <button type="button" class="btn btn-default" name="back-btn" title="@Resource.Back" onclick="location.href='@Url.Action("Index", "GpuObservation")'">
                            <i class="fa fa-arrow-left fa-fw"></i>&nbsp;@Resource.Back
                        </button>
                        <button type="submit" class="btn btn-default btn-green" name="back-btn" title="@Resource.Save">
                            <i class="fa fa-floppy-o fa-fw"></i>&nbsp;@Resource.Save
                        </button>
                        <br />
                    </div>
                </div>
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/CommonFunctions")

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
