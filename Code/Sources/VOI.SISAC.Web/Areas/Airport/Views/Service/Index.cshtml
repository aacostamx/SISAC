@model IEnumerable<VOI.SISAC.Web.Models.VO.Airport.ServiceVO>
@{
    ViewBag.Title = VOI.SISAC.Web.Resources.Resource.ServiceTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/bootstraptablecss")

<div class="container">

    @Html.Partial("_AlertView")

    <h2 class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.ServiceTitle</h2>
    <div id="toolbar">
        @if (User.IsInRole("SERVICE-ADD"))
        {
            <button type="button" class="btn btn-default" name="Agregar" title="@VOI.SISAC.Web.Resources.Resource.Add" onclick="location.href='@Url.Action("Create", "Service")'"><i class="fa fa-plus"></i>&nbsp;@VOI.SISAC.Web.Resources.Resource.Add</button>
        }
    </div>
    <table id="tbService"
           data-toolbar="#toolbar"
           class="table"
           data-toggle="table"
           data-show-columns="true"
           data-search="true"
           data-show-toggle="true"
           data-show-export="true"
           data-export-types="['excel']"
           data-show-pagination-switch="true"
           data-mobile-responsive="true"
           data-pagination="true"
           data-export-data-type="all"
           data-page-size="10">
        <thead>
            <tr>
                <th data-field="ServiceCode" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.ServiceCode)</strong>
                </th>
                <th data-field="ServiceName" data-halign="left" data-align="left" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.ServiceName)</strong>
                </th>
                @if (User.IsInRole("SERVICE-UPD") || User.IsInRole("SERVICE-DEL"))
                {
                    <th data-field="Acctions" data-align="center" data-halign="center">
                        <strong>@VOI.SISAC.Web.Resources.Resource.Actions</strong>
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    @if (User.IsInRole("SERVICE-UPD") || User.IsInRole("SERVICE-DEL"))
                    {
                        <td>
                            @if (User.IsInRole("SERVICE-UPD"))
                            {
                                <button class="btn btn-default" type="button" name="Edit" title="@VOI.SISAC.Web.Resources.Resource.Edit" onclick="location.href='@Url.Action("Edit", "Service", new { id = item.ServiceCode })'"><i class="fa fa-pencil fa-fw"></i></button>
                            }
                            @if (User.IsInRole("SERVICE-DEL"))
                            {
                                <button class="btn btn-default" type="button" name="Delete" title="@VOI.SISAC.Web.Resources.Resource.Delete" onclick="location.href='@Url.Action("Delete", "Service", new { id = item.ServiceCode })'"><i class="fa fa-trash-o fa-fw"></i></button>
                            }
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br />
</div>
@Scripts.Render("~/bundles/CommonFunctions")
@Scripts.Render("~/bundles/bootstrapTable")
@Scripts.Render("~/bundles/bootstrapTablePlugins")
@Scripts.Render("~/bundles/ExportTable")
