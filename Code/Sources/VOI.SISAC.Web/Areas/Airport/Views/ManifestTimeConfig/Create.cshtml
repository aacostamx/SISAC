@model VOI.SISAC.Web.Models.VO.Airport.ManifestTimeConfigModelVO

@{
    ViewBag.Title = Resource.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @Html.Partial("_AlertView")

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <p class="subtitle_h3_black">@Resource.ManifestTimeConfigTitle</p>
        <p class="subtitle_h3_ancillarie">@Resource.Add</p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">

                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ManifestVO.AirlineCode, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    <div class="styled-select">
                        @Html.DropDownListFor(model => model.ManifestVO.AirlineCode, Model.AirlineVO.Select(h => new SelectListItem
                   {
                       Text = h.AirlineCode.ToString(),
                       Value = h.AirlineCode.ToString()
                   }), "Seleccionar", new { htmlAttributes = new { @class = "inputForm form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ManifestVO.AirlineCode, "", new { @class = "text-danger" })
                </div>

                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ManifestVO.ArrivalMinutesMin, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ManifestVO.ArrivalMinutesMin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ManifestVO.ArrivalMinutesMin, "", new { @class = "text-danger" })
                </div>

                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ManifestVO.ArrivalMinutesMax, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ManifestVO.ArrivalMinutesMax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ManifestVO.ArrivalMinutesMax, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ManifestVO.DepartureMinutesMin, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ManifestVO.DepartureMinutesMin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ManifestVO.DepartureMinutesMin, "", new { @class = "text-danger" })
                </div>

                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ManifestVO.DepartureMinutesMax, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.ManifestVO.DepartureMinutesMax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ManifestVO.DepartureMinutesMax, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <input onclick="location.href='@Url.Action("Index","ManifestTimeConfig")'" type="reset" class="btnVolaris" value="@Resource.Back">
                <input type="submit" value="@Resource.Save" class="btnVolaris">
            </div>
        </div>
    }
</div>
@Scripts.Render("~/bundles/CommonFunctions")
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
