@model VOI.SISAC.Web.Models.VO.Airport.DrinkingWaterVO

@{
    ViewBag.Title = @VOI.SISAC.Web.Resources.Resource.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.DrinkingWaterTitle</p>
    <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Delete</p>
</div>
<div class="container">
    @Html.Partial("_AlertView")
    <h3>@VOI.SISAC.Web.Resources.Resource.ConfirmDelete</h3>
    <div class="dl-horizontal">        
        <div class="row">
            <div class="col-md-4 col-sm-12 col-xs-12">
                @Html.LabelFor(model => model.EquipmentNumber, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.EquipmentNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>
        @Html.HiddenFor(model => model.DrinkingWaterId)
        <div class="row">
            <div class="col-md-4 col-sm-12 col-xs-12">
                @Html.LabelFor(model => model.DrinkingWaterName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.DrinkingWaterName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-4 col-sm-12 col-xs-12">
                @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <br />
                    <button type="button" class="btn btn-default" name="back-btn" title="@Resource.Back" onclick="location.href='@Url.Action("Index", "DrinkingWater")'">
                        <i class="fa fa-arrow-left fa-fw"></i>&nbsp;@Resource.Back
                    </button>
                    <button type="submit" class="btn btn-default btn-green" name="back-btn" title="@Resource.Delete">
                        <i class="fa fa-trash fa-fw"></i>&nbsp;@Resource.Delete
                    </button>
                    <br />
                </div>
            </div>
    }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}