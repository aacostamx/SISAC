@model VOI.SISAC.Web.Models.VO.Airport.DrinkingWaterVO
@{
    this.ViewBag.Title = VOI.SISAC.Web.Resources.Resource.Add;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var airplaneCatalog = this.ViewBag.AirplaneCatalog as List<VOI.SISAC.Business.Dto.Airports.AirplaneDto>;
}

<div class="container">
    @Html.Partial("_AlertView")
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.DrinkingWaterTitle</p>
        <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Add</p>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4">
                    @Html.LabelFor(model => model.EquipmentNumber, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    <div class="styled-select">
                        @Html.DropDownListFor(model => model.EquipmentNumber, airplaneCatalog.Select(h => new SelectListItem
                            {
                                Text = h.EquipmentNumber,
                                Value = h.EquipmentNumber
                            }), VOI.SISAC.Web.Resources.Resource.SelectItem, new { htmlAttributes = new { @class = "inputForm form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.EquipmentNumber, "", new { @class = "text-danger text-danger-error" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.DrinkingWaterName, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.DrinkingWaterName, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 100, 2);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumericoCaracteresEspeciales(event, this, 100, 2)" } })
                    @Html.ValidationMessageFor(model => model.DrinkingWaterName, "", new { @class = "text-danger text-danger-error" })
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return commonFunctions.validarNumeroDecimal(event, this, 10, 2);", @onkeyup = "return commonFunctions.validarNumeroDecimal(event, this, 10, 2)" } })
                    @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <br />
                    <input type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back" onclick="@("location.href='" + @Url.Action("Index", "DrinkingWater") + "'")">
                    <input type="submit" value="@VOI.SISAC.Web.Resources.Resource.Create" class="btnVolaris">
                    <br />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}

