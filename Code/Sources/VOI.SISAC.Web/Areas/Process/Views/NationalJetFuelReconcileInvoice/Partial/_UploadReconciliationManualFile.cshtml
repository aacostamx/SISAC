@model VOI.SISAC.Web.Models.VO.Process.NationalJetFuelReconcileControlVO
<div class="modal fade" id="UploadFile" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.UploadFile</h4>
            </div>
            @using (Html.BeginForm("Upload", "UploadNationalJetFuelManualReconcile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                @Html.Hidden("pRemittanceID", Model.RemittanceID)
                                @Html.Hidden("pMonthYear", Model.MonthYear)
                                @Html.Hidden("pPeriod", Model.Period)
                                <label class="subtitle_h5">@VOI.SISAC.Web.Resources.Resource.UploadFile</label>                                
                                <input type="file" name="file" class="filestyle" data-icon="false" data-buttonname="btn-primary" data-buttontext="@VOI.SISAC.Web.Resources.Resource.SelectFile" data-placeholder="@VOI.SISAC.Web.Resources.Resource.NotFile" accept=".txt" required="required"/>
                                @Html.ActionLink(@VOI.SISAC.Web.Resources.Resource.DownloadTemplateFile, "Download", "UploadNationalJetFuelInvoice")
                            </div>
                    </div>                    
                </div>
                <div class="modal-footer">                    
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <i class="fa fa-times"></i>
                        @VOI.SISAC.Web.Resources.Resource.Close
                    </button>
                    <button type="submit" class="btn btn-default btn-green">
                        <i class="fa fa-upload"></i>
                        @VOI.SISAC.Web.Resources.Resource.UploadFile
                    </button>
                </div>
            }
        </div>
    </div>
</div>
