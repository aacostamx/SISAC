@model VOI.SISAC.Web.Models.VO.Itineraries.ItineraryVO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/bootstraptablecss")
@Styles.Render("~/bundles/SweetAlertCSS")
@Styles.Render("~/Content/bootstrapdtimecss")
<link href="~/Content/timeline.css" rel="stylesheet" />
<link href="~/Content/genericons.css" rel="stylesheet" />
<link href="~/Content/circle-menu.css" rel="stylesheet" />
<link href="~/Content/wpex.css" rel="stylesheet" />
<link href="~/Content/button_hover.css" rel="stylesheet" />

<style>
    textarea {
        text-transform: uppercase;
    }
</style>

<div class="container">
    <div class="container-fluid" style="background: #b4539d; padding: 20px 30px !important">
        <div class="row" style="margin-bottom: 0;">
            <div class="col-xs-12 col-sm-12 col-md-4" style="padding-top: 9px;padding-left: 0px; padding-right: 0px;">
                <img src="~/Content/images/avion.png" alt="prueba" style="width:59px;height:20px;">
                <strong class="table_title_white">
                    @Resource.FlightInformation
                </strong>
            </div>

            <div class="col-xs-2 col-sm-2 col-md-8 text-right" style="padding-left: 0px; padding-right: 0px;">
                <div class="set_container">
                    <div class="set_8_button outline" href="#" id="current-airline"><strong style="color: white">@Model.AirlineCode</strong><span class="lines"></span></div>
                    <div class="set_8_button outline" href="#" id="current-flight"><strong style="color: white">@Model.FlightNumber</strong><span class="lines"></span></div>
                    <div class="set_8_button outline" href="#" id="current-equipment"><strong style="color: white">@Model.EquipmentNumber</strong><span class="lines"></span></div>
                    <div class="set_8_button outline" href="#" id="current-date"><strong style="color: white">@Model.DepartureDate.ToString("yyyy/MM/dd")</strong><span class="lines"></span></div>
                    <div class="set_8_button outline" href="#" id="current-time"><strong style="color: white">@Model.DepartureTime.ToString(@"hh\:mm")</strong><span class="lines"></span></div>
                    <div style="clear:both"></div>
                </div>
            </div>
        </div>

    </div>

    <div class="container" style="padding-left: 15%; padding-right: 15%;">
        <div id="content">
            <div id="primary">
                <main id="main" role="main">
                    <div id="timeline" class="wpex slider-timeline slider-content-modern wpex-tl-horizontal wpex-style- arrow-top" data-layout="horizontal" data-autoplay="0" data-id="timeline">
                        <div class="wpex-point">
                            <div class="tl-date">
                                <div class="timeline-hr"></div>
                                <div class="timeline-pos-select"></div>
                                <ul class="wpex-dates" id="stations-list">
                                    @* Section where the airports are shown *@
                                </ul>
                            </div>
                        </div>
                        <div class="container">
                            <ul class="wptl-item" id="timeline-body">
                                @* Section where the information is shown *@
                            </ul>
                        </div>
                        <a href="#" id="next"><i class="fa fa-angle-right" aria-hidden="true"></i></a>
                        <a href="#" id="prev"><i class="fa fa-angle-left" aria-hidden="true"></i></a>
                    </div>
                </main>
            </div>
            <nav class="c-circle-menu js-menu">
                <button class="c-circle-menu__toggle js-menu-toggle">
                    <span>Toggle</span>
                </button>
                <ul class="c-circle-menu__items">
                    <li class="c-circle-menu__item">
                        <a href="#" class="c-circle-menu__link">
                            <img src="~/Content/images/house.svg" alt="">
                        </a>
                    </li>
                    <li class="c-circle-menu__item">
                        <a href="#" class="c-circle-menu__link">
                            <img src="~/Content/images//photo.svg" alt="">
                        </a>
                    </li>
                    <li class="c-circle-menu__item">
                        <a href="#" class="c-circle-menu__link">
                            <img src="~/Content/images/pin.svg" alt="">
                        </a>
                    </li>
                    <li class="c-circle-menu__item">
                        <a href="#" class="c-circle-menu__link">
                            <img src="~/Content/images/search.svg" alt="">
                        </a>
                    </li>
                    <li class="c-circle-menu__item">
                        <a href="#" class="c-circle-menu__link">
                            <img src="~/Content/images/tools.svg" alt="">
                        </a>
                    </li>
                </ul>
                <div class="c-circle-menu__mask js-menu-mask"></div>
            </nav>
        </div>
    </div>
</div>


@Html.Partial("Partial/_ModalMovements")

<ul id="context-menu" class="dropdown-menu">
    @if (User.IsInRole("TIMELINE-IDX"))
    {
        <li data-item="Edit"><a><i class="fa fa-pencil fa-fw"></i>&nbsp;Edit</a></li>
    }
    @if (User.IsInRole("TIMELINE-IDX"))
            {
        <li data-item="Delete"><a><i class="fa fa-trash-o fa-fw"></i>&nbsp;Delete</a></li>
    }

</ul>

@section Scripts {
    <script type='text/javascript' src='~/Scripts/timeline-scroll.js'></script>
    <script type='text/javascript' src='~/Scripts/circleMenu.js'></script>
    @Scripts.Render("~/bundles/bootstrapTable")
    @Scripts.Render("~/bundles/bootstrapTablePlugins")
    @Scripts.Render("~/bundles/BootstrapContextMenu")
    @Scripts.Render("~/bundles/SweetAlertJS")
    @Scripts.Render("~/bundles/bootstrapdtimejs")
    @Scripts.Render("~/bundles/CommonFunctions")
    <script type='text/javascript' src="~/Scripts/SISAC/Itinerary/Timeline.js"></script>

    <script>
        var el = '.js-menu';
        var myMenu = cssCircleMenu(el);
    </script>

    <script>
        $(document).ready(TimelineController.getTimeline('@Model.EquipmentNumber', '@Model.Sequence', '@Model.AirlineCode', '@Model.FlightNumber', '@Model.ItineraryKey'));
    </script>

}
