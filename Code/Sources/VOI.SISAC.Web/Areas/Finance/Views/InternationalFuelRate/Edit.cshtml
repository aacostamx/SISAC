@model VOI.SISAC.Web.Models.VO.Finance.InternationalFuelRateVO
@{
    ViewBag.Title = VOI.SISAC.Web.Resources.Resource.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @Html.Partial("_AlertView")

    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.RateTitle</p>
                <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Edit</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div>
                    @Html.HiddenFor(model => model.InternationalFuelRateID)
                    @Html.HiddenFor(model => model.InternationalFuelContractConcept.EffectiveDate)
                    @Html.HiddenFor(model => model.InternationalFuelContractConcept.AirlineCode)
                    @Html.HiddenFor(model => model.InternationalFuelContractConcept.StationCode)
                    @Html.HiddenFor(model => model.InternationalFuelContractConcept.ServiceCode)
                    @Html.HiddenFor(model => model.InternationalFuelContractConcept.ProviderNumberPrimary)
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.InternationalFuelContractConcept.FuelConcept.FuelConceptName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.InternationalFuelContractConcept.FuelConcept.FuelConceptName, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.InternationalFuelContractConcept.FuelConcept.FuelConceptName, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.RateStartDate, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.RateStartDate, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.RateStartDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.RateEndDate, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.RateEndDate, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.RateEndDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.Rate, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarNumeroDecimal(event, this, 18, 5);", @onkeyup = "return commonFunctions.validarMaxLengthNumerico(event, this, 13, 1)" } })
                    @Html.ValidationMessageFor(model => model.Rate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <br />
                    <input onclick="location.href='@Url.Action("Index", "InternationalFuelRate", new { effectiveDate = Model.InternationalFuelContractConcept.EffectiveDate, airlineCode = Model.InternationalFuelContractConcept.AirlineCode, stationCode = Model.InternationalFuelContractConcept.StationCode, serviceCode = Model.InternationalFuelContractConcept.ServiceCode, providerNumberPrimary = Model.InternationalFuelContractConcept.ProviderNumberPrimary })'" type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back">
                    <input type="submit" value="@VOI.SISAC.Web.Resources.Resource.Save" class="btnVolaris">
                    <br />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}