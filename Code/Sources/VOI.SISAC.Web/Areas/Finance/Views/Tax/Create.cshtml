@model VOI.SISAC.Web.Models.VO.Finance.TaxVO

@{
    ViewBag.Title = @VOI.SISAC.Web.Resources.Resource.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @Html.Partial("_AlertView")
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.TaxTitle</p>
                <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Add</p>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.TaxCode, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.TaxCode, new { htmlAttributes = new { @class = "form-control specialInput", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 8, 1);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 8, 1)" } })
                    @Html.ValidationMessageFor(model => model.TaxCode, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.TaxName, htmlAttributes: new { @class = "subtitle_h5 control-label required-field" })
                    @Html.EditorFor(model => model.TaxName, new { htmlAttributes = new { @class = "inputForm form-control", @onkeypress = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 50);", @onkeyup = "return commonFunctions.validarMaxLengthAlfanumerico(event, this, 50)" } })
                    @Html.ValidationMessageFor(model => model.TaxName, "", new { @class = "text-danger" })
                </div>
                @*<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                        @Html.LabelFor(model => model.TaxValue, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                        @Html.EditorFor(model => model.TaxValue, new { htmlAttributes = new { @class = "inputForm form-control", @onkeypress = "return validarNumeroDecimal(event,this,9,2)", @onkeyup = "return validarNumeroDecimal(event,this,9,2)" } })
                        @Html.ValidationMessageFor(model => model.TaxValue, "", new { @class = "text-danger" })
                    </div>*@
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <br />
                    <input onclick="location.href='@Url.Action("Index","Tax")'" type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back" />
                    <input type="submit" value="@VOI.SISAC.Web.Resources.Resource.Save" class="btnVolaris" />
                    <br />
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}