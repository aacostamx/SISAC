@model VOI.SISAC.Web.Models.VO.Finance.TaxVO

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.TaxTitle</p>
    <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Delete</p>
</div>

<div class="container">
    <h3>@VOI.SISAC.Web.Resources.Resource.ConfirmDelete</h3>
    <div class="form-horizontal">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(model => model.TaxCode, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.TaxCode, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TaxCode, "", new { @class = "text-danger" })
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                @Html.LabelFor(model => model.TaxName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.TaxName, new { htmlAttributes = new { @class = "inputForm form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.TaxName, "", new { @class = "text-danger" })
            </div>
            @*<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.TaxValue, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.TaxValue, new { htmlAttributes = new { @class = "inputForm form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TaxValue, "", new { @class = "text-danger" })
                </div>*@
        </div>

        <br />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <br />
                    <input onclick="location.href='@Url.Action("Index","Tax")'" type="reset" class="btnVolaris" value="Regresar">
                    <input type="submit" value="Eliminar" class="btnVolaris" />
                    <br />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
}