@model VOI.SISAC.Web.Models.VO.Finance.NationalFuelRateVO
@{
    ViewBag.Title = VOI.SISAC.Web.Resources.Resource.Edit;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @Html.Partial("_AlertView")
    @using (Html.BeginForm("Edit", "NationalFuelRate", FormMethod.Post, new { id = "NationalFuelRateForm" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <p class="subtitle_h3_black">@VOI.SISAC.Web.Resources.Resource.RateTitle</p>
                <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Edit</p>
            </div>
            <div>
                @Html.HiddenFor(model => model.NationalFuelRateId)
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.StationCode, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.StationCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ServiceName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.ServiceName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ProviderNumber, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.ProviderNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.EffectiveStartDate, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.TextBoxFor(model => model.EffectiveStartDate, new { @class = "form-control", @Value = Model.EffectiveStartDate.ToString(Resource.DateTimeFormat), @readonly = "readonly" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.EffectiveEndDate, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.TextBoxFor(model => model.EffectiveEndDate, new { @class = "form-control", @Value = Model.EffectiveEndDate.ToString(Resource.DateTimeFormat), @readonly = "readonly" })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.ScheduleTypeName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.ScheduleTypeName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.FuelConceptTypeName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.FuelConceptTypeName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.RateValue, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.RateValue, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return commonFunctions.validarNumeroDecimal(event, this, 8, 4);", @onkeyup = "return commonFunctions.validarNumeroDecimal(event, this, 8, 6)" } })
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    @Html.LabelFor(model => model.CurrencyCode, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                    @Html.EditorFor(model => model.CurrencyCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <br />
                    <button id="btnBack" type="button" class="btn btn-default btn-lg" name="Back" title="@Resource.Back" onclick="location.href='@Url.Action("Index", "NationalFuelRate")'">
                        <i class="fa fa-arrow-left fa-fw"></i>&nbsp;@Resource.Back
                    </button>
                    <button id="btnContract btn-green" type="button" class="btn btn-default btn-lg btn-green" name="Save" title="@Resource.Save" onclick="NationalFuelRate.submitForm()">
                        <i class="fa fa-floppy-o fa-fw"></i>&nbsp;@Resource.Save
                    </button>
                    <br />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/CommonFunctions")
    @Scripts.Render("~/bundles/NationalFuelRateJS")
}
