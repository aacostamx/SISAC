@{
    ViewBag.Title = VOI.SISAC.Web.Resources.Resource.ModulePermission;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cultureForm = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
    var moduleInfo = this.ViewBag.ModuleInfo as VOI.SISAC.Business.Dto.Security.ModuleDto;
}

@Styles.Render("~/Content/bootstraptablecss")
@Styles.Render("~/bundles/SweetAlertCSS")

<form id="ModulePermissionCreate" method="post">
    @Html.AntiForgeryToken()
    <div class="container">
        @Html.Partial("_AlertView")
        <h2 class="subtitle_h3_black">@Resource.ModulePermission</h2>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <label class="subtitle_h5 control-label">@Resource.ModuleTitle</label>
            <input id="ModuleName" type="text" name="ModuleDescription" class="inputForm form-control" value="@moduleInfo.ModuleName" readonly="" />
            <input id="ModuleCode" type="hidden" name="ModuleId" value="@moduleInfo.ModuleCode" />
            <br />
            <label class="subtitle_h5 control-label">@Resource.Permissions</label>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="PermissionSection">
                        @* This setion will be dinamically set in JavaScriipt *@
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12  text-center">
            <button id="btnBackServices" type="button" class="btn btn-default" name="@VOI.SISAC.Web.Resources.Resource.Back" title="@VOI.SISAC.Web.Resources.Resource.Back" onclick="location.href='@Url.Action("Index", "Module")'">
                <i class="fa fa-arrow-left  fa-fw"></i>
                &nbsp;@VOI.SISAC.Web.Resources.Resource.Back
            </button>
            <button id="btnSaveServices" type="button" class="btn btn-default" name="@VOI.SISAC.Web.Resources.Resource.Save" title="@VOI.SISAC.Web.Resources.Resource.Save" onclick="ModulePermissionController.showConfirmMessage()">
                <i class="fa fa-floppy-o fa-fw"></i>
                &nbsp;@VOI.SISAC.Web.Resources.Resource.Save
            </button>
        </div>
    </div>
</form>
@section Scripts{
    <script src="~/Scripts/SISAC/Security/ModulePermission.js"></script>
    @Scripts.Render("~/bundles/SweetAlertJS")
}