@model IEnumerable<VOI.SISAC.Web.Models.VO.Security.UserVO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cultureForm = VOI.SISAC.Web.Helpers.CultureHelper.GetCurrentCulture();
}

@Styles.Render("~/Content/bootstraptablecss")

<div class="container">
    @Html.Partial("_AlertView")
    <h2 class="subtitle_h3_black">@Resource.UserTitle</h2>
    <div id="toolbar">
        @if (User.IsInRole("USER-ADD"))
        { 
            <button type="button" class="btn btn-default" name="Agregar" title="@VOI.SISAC.Web.Resources.Resource.Add" onclick="location.href='@Url.Action("Create", "User")'">
                <i class="fa fa-plus fa-fw"></i>&nbsp;@VOI.SISAC.Web.Resources.Resource.Add</button>
        }
    </div>

    <table id="tbModule"
        data-toolbar="#toolbar"
        class="table"
        data-toggle="table"
        data-show-columns="true"
        data-search="true"
        data-show-toggle="true"
        data-show-pagination-switch="true"
        data-mobile-responsive="true"
        data-pagination="true"
        data-page-size="10">
        <thead>
            <tr>
                <th data-field="Acctions" data-align="center" data-halign="center"><strong>@VOI.SISAC.Web.Resources.Resource.Actions</strong></th>
                <th data-field="UserID" data-halign="center" data-align="center" data-sortable="true" data-visible="false">
                    <strong>@Html.DisplayNameFor(model => model.UserID)</strong>
                </th>
                <th data-field="AirlineCode" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.AirlineCode)</strong>
                </th>
                <th data-field="EmployeeNumber" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.EmployeeNumber)</strong>
                </th>
                <th data-field="UserName" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.UserName)</strong>
                </th>
                <th data-field="Name" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.Name)</strong>
                </th>
                <th data-field="FirstName" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.FirstName)</strong>
                </th>
                <th data-field="LastName" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.LastName)</strong>
                </th>
                <th data-field="Email" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.Email)</strong>
                </th>
                <th data-field="DepartmentID" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.DepartmentID)</strong>
                </th>
                <th data-field="EntryDate" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.EntryDate)</strong>
                </th>
                <th data-field="CreationDate" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.CreationDate)</strong>
                </th>
                <th data-field="UserVolaris" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.UserVolaris)</strong>
                </th>
                <th data-field="NombreUsuario" data-halign="center" data-align="center" data-sortable="true">
                    <strong>@Html.DisplayNameFor(model => model.NombreUsuario)</strong>
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            { 
                foreach (var item in Model)
                {
                    <tr>
                        @if (User.IsInRole("USER-UPD") || User.IsInRole("USER-DEL"))
                        { 
                        <td>
                            @if (User.IsInRole("USER-UPD"))
                            { 
                                <button class="btn btn-default" type="button" name="Edit" title="@VOI.SISAC.Web.Resources.Resource.Edit" onclick="location.href='@Url.Action("Edit","User", new { id = item.UserID } )'"><i class="fa fa-pencil fa-fw"></i></button>
                            }
                            @if (User.IsInRole("USER-DEL"))
                            { 
                                <button class="btn btn-default" type="button" name="Delete" title="@VOI.SISAC.Web.Resources.Resource.Delete" onclick="location.href='@Url.Action("Delete","User", new { id = item.UserID } )'"><i class="fa fa-trash-o fa-fw"></i></button>
                            }
                        </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.UserID)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AirlineCode)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmployeeNumber)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentID)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntryDate)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationDate)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserVolaris)
                                </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreUsuario)
                                </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@Scripts.Render("~/bundles/bootstrapTable")
@Scripts.Render("~/bundles/bootstrapTablePlugins")
<script type="text/javascript">
    var currentLang = '@cultureForm.ToString()';
</script>
