@model VOI.SISAC.Web.Models.VO.Security.PermissionVO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cultureForm = VOI.SISAC.Web.Helpers.CultureHelper.GetCurrentCulture();
}
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
       <p class="subtitle_h3_black">@Resource.PermissionTitle</p>
       <p class="subtitle_h3_ancillarie">@VOI.SISAC.Web.Resources.Resource.Delete</p>
</div>

@Styles.Render("~/Content/bootstraptablecss")
@Styles.Render("~/bundles/SweetAlertCSS")

<div class = "container">
    @Html.Partial("_AlertView")
    <h3>@VOI.SISAC.Web.Resources.Resource.ConfirmDelete</h3>
    <div class="dl-horizontal">
        <div class="row"> 
            <div class="col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.PermissionCode, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.PermissionCode, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.PermissionCode, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12">
                @Html.LabelFor(model => model.PermissionName, htmlAttributes: new { @class = "subtitle_h5 control-label" })
                @Html.EditorFor(model => model.PermissionName, new { htmlAttributes = new { @class = "form-control specialInput", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.PermissionName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()

           <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <br />
                    <input onclick="location.href='@Url.Action("Index","Permission")    '" type="reset" class="btnVolaris" value="@VOI.SISAC.Web.Resources.Resource.Back" title="@VOI.SISAC.Web.Resources.Resource.Back">
                    <input type="reset" value="@VOI.SISAC.Web.Resources.Resource.Delete" title ="@VOI.SISAC.Web.Resources.Resource.Delete" class="btnVolaris" onclick="PermissionController.ConfirmDelete('@Model.PermissionCode.ToString()')"/>
                </div>
            </div>
        }

    </div>

@Scripts.Render("~/bundles/SweetAlertJS")
@Scripts.Render("~/bundles/PermissionJS")
<script type="text/javascript">
    var currentLang = '@cultureForm.ToString()';
</script>