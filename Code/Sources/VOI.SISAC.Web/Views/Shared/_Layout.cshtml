<head>

    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8" />
    <title>@Resource.SISAC</title>
    <meta name="description" content="@Resource.SISACHeadTitle" />
    <meta name="author" content="Y4" />

    <!-- Mobile Specific Metas
    ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS
    ================================================== -->
    @Styles.Render("~/Content/Main/css")
    @Styles.Render("~/Content/fontawesomecss")
    @Scripts.Render("~/bundles/modernizr")

    <!-- JS
    ================================================== -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrapjs")
    @Scripts.Render("~/bundles/CommonAction")
