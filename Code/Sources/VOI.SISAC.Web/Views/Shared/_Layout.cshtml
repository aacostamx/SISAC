    <![endif]-->
</head>
<body>
    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    }

    @using (Html.BeginForm("ChangeLanguage", "Account", new { area = "" }, FormMethod.Post, new { id = "changeLanguage" }))
