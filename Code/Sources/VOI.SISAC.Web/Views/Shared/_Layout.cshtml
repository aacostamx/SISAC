                                <ul>
                                    <li class="dropdown-header">@Resource.InternationalFuelTitle</li>
                                    <li><a href="~/Process/JetFuelReportTicket">@Resource.ReportTicket</a></li>
                                </ul>
                            </li>
                            <li class="col-sm-6">
                                <ul>
                                    <li class="dropdown-header">@Resource.NationalFuelMenu</li>
                                    <li><a href="~/Process/NationalJetFuelReportTicket">@Resource.ReportTicket</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown dropdown-large">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resource.Process <b class="caret"></b></a>
                        <ul class="dropdown-menu dropdown-menu-large row">
                            <li class="col-sm-6">
                                <ul>
                                    <li class="dropdown-header">@Resource.InternationalFuelTitle</li>
                                    <li><a href="~/Process/JetFuelProcess">@Resource.SubmitCalculationProcess</a></li>
                                    <li><a href="~/Process/JetFuelCalculationResult">@Resource.ViewInternationalFuelCalculationResult</a></li>
                                    @*<li><a href="~/Process/JetFuelLogError">@Resource.ViewDetailErrors</a></li>*@
                                    <li><a href="~/Process/ConfirmPeriod">@Resource.ConfirmCalculationPeriod</a></li>
                                    <li><a href="~/Process/CreatePolicy">@Resource.CreatePolicy</a></li>
                                    <li><a href="~/Process/PoliciesHistory">@Resource.PoliciesHistoryMenu</a></li>
                                </ul>
                            </li>
                            <li class="col-sm-6">
                                <ul>
                                    <li class="dropdown-header">@Resource.NationalFuelMenu</li>
                                    <li><a href="~/Process/NationalJetFuelProcess">@Resource.SubmitCalculationProcess</a></li>
                                    <li><a href="~/Process/NationalJetFuelCalculationResult">@Resource.ViewNationalFuelCalculationResult</a></li>
                                    @*<li><a href="~/Process/NationalJetFuelLogError">@Resource.ViewDetailErrors</a></li>*@
                                    <li><a href="~/Process/ConfirmNationalPeriod">@Resource.ConfirmCalculationPeriod</a></li>
                                    <li><a href="~/Process/NationalPolicy">@Resource.CreatePolicy</a></li>
                                    <li><a href="~/Process/NationalPolicyHistory">@Resource.PoliciesHistoryMenu</a></li>
                                    <li><a href="~/Process/NationalJetFuelInvoice">@Resource.ManageInvoices</a></li>
                                    <li><a href="~/Process/NationalJetFuelReconcileInvoice">@Resource.ReconcileInvoices</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>

                    <li class="dropdown dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resource.Manage <b class="caret"></b></a>
                        <ul class="dropdown-menu dropdown-menu-large row">
                            <li class="col-sm-12">
                                <ul>
                                    <li class="dropdown-header">@Resource.Security</li>
                                    <li><a href="~/Security/User">@Resource.User</a></li>
                                    <li><a href="~/Security/Profile">@Resource.Perfil</a></li>
                                    <li><a href="~/Security/Role">@Resource.Rol</a></li>
                                    <li><a href="~/Security/Module">@Resource.Modulo</a></li>
                                    <li><a href="~/Security/Permission">@Resource.Permiso</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li><a href="#">@Resource.Learn</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Resource.Language<b class="caret"></b></a>
                        <ul class="dropdown-menu dropdown-menu-large row">
                            <li class="col-sm-12">
                                <ul>
                                    <li><a href="#" onclick="accountController.ChangeLanguage('@Resource.SpanishCulture')">@Resource.SpanishLanguage</a></li>
                                    <li><a href="#" onclick="accountController.ChangeLanguage('@Resource.EnglishCulture')">@Resource.EnglishLanguage</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown dropdown-large">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@User.Identity.Name <b class="caret"></b></a>
                        <ul class="dropdown-menu dropdown-menu-large row">
                            <li class="col-sm-12">
                                <ul>
                                    <li class="dropdown-header">@Resource.Account</li>
                                    <li><a href="#" onclick="accountController.LogOff()">@Resource.LogOff</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="container">
            <h1 class="title_h1 topindex">@Resource.SISAC</h1>
            <hr class="index" />
            <ol class="breadcrumb" style="margin-left: 0;">
                @Html.MvcSiteMap().SiteMapPath()
            </ol>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <div id="footer" class="container-fluid-footer">
        <footer class="footer">
            <p class="centerText">
                <span>
                    &copy; @DateTime.Now.Year -
                    <b>@Resource.Version @typeof(MvcApplication).Assembly.GetName().Version</b> - @Resource.SISACFooter
                </span>
            </p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
