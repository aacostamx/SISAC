                                    <li><a href="~/Finance/NationalFuelRate">@Resource.NationalFuelRate</a></li>
                                    <li><a href="~/Finance/AirportServiceContract">@Resource.AirportServiceContractMenu</a></li>
                                    <li><a href="~/Finance/AccountingAccount">@Resource.AccountingAccountMenu</a></li>
                                    <li><a href="~/Finance/LiabilityAccount">@Resource.LiabilityAccountMenu</a></li>
                                    <li><a href="~/Finance/Tax">@Resource.TaxMenu</a></li>
                                    <li><a href="~/Airport/Service">@Resource.ServiceMenu</a></li>
                                    <li><a href="~/Finance/Provider">@Resource.ProviderMenu</a></li>
                                </ul>
                            </li>
                            <li class="col-sm-4">
                                <ul>
                                    <li class="dropdown-header">@Resource.HelperCatalog</li>
                                    <li><a href="~/Airport/Delay">@Resource.DelayMenu</a></li>
