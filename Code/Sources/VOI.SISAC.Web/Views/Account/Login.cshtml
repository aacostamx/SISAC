@model VOI.SISAC.Web.Models.VO.Security.LoginVO

@{
    Layout = null;
    ViewBag.Title = "Login";
}

@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/bootstrap")
@Styles.Render("~/bundles/LoginCSS")

<div class="container-fluid" style="padding-left: 0; padding-right: 0;">
    <div class="col-xs-12 col-sm-5 col-md-4 col-lg-4" style="padding-left: 0; padding-right: 0;">
        <div class="row" id="transp">
            <div class="wrap" style="padding-top: 50%;">
                <p class="form-title">
                    @Resource.SingIn
                </p>
                @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { placeholder = @Resource.UserName.ToString() } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "form.login label" })
                    <p></p>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { placeholder = @Resource.Password.ToString() } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "form.login label" })
                    <p></p>
                    @Html.ValidationSummary(true, "", new { @class = "text-white" })

                    <input type="submit" value="@Resource.SingIn" class="btn btn-success btn-sm" style="background-color: #8bc641; border-color: #9E4493" />
                    <div class="remember-forgot">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-3">
                                <div class="checkbox">
                                    <label>
                                        @Html.EditorFor(model => model.RememberMe)
                                        @Resource.RememberMe
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrapjs")
